#block-signup.block

  %h2.title Crear una cuenta

  .content
    - form_for resource_name, resource, :url => registration_path(resource_name), :html=>{:class=>'form'} do |f|
      - if resource.errors.any?
        .flash
          .message{:class=>'error'}
            = f.error_messages :header_tag=>'h4', :header_message=>"No se pudo completar el registro", :message=>"Ocurrieron los siguientes errores:"
      
      .group{:class => 'wat-cf'}
        .left=  f.label :email, nil, :class=>'label'
        .right
          = f.text_field :email, :class=>'text_field'
          %span.description Ejemplo: mail@midominio.com

      .group{:class => 'wat-cf'}
        .left=  f.label :password, 'Contraseña', :class=>'label'
        .right= f.password_field :password, :class=>'text_field'

      .group{:class => 'wat-cf'}
        .left=  f.label :password_confirmation, 'Confirmar Contraseña', :class=>'label'
        .right= f.password_field :password_confirmation, :class=>'text_field'

      .group{:class => 'navform wat-cf'}
        %button.button{:type=>'submit'}
          = image_tag('web-app-theme/tick.png')
          Registrarme

