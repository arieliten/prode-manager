.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_teams_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_admin_team_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_team_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Team
    .inner
      - form_for @team, :url => admin_team_path(@team), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')