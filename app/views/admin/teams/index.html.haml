.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_teams_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_team_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Teams
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.admin_team.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @teams.each do |team|
          %tr{:class => cycle("odd", "even")}
            %td= team.id
            %td= link_to team.name, admin_team_path(team)
            %td= team.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), admin_team_path(team)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_team_path(team)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), admin_team_path(team), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions
        
- content_for :sidebar, render(:partial => 'sidebar')