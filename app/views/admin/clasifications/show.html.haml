.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_clasifications_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_admin_clasification_path
      %li.active= link_to t("web-app-theme.show", :default => "Show"), admin_clasification_path
  .content
    .inner
      %p
        <b>#{ t("activerecord.attributes.admin_clasification.team_id", :default => t("activerecord.labels.team_id", :default => "Team")) }:</b>
        = @clasification.team_id
      %p
        <b>#{ t("activerecord.attributes.admin_clasification.stage_id", :default => t("activerecord.labels.stage_id", :default => "Stage")) }:</b>
        = @clasification.stage_id
      %p
        <b>#{ t("activerecord.attributes.admin_clasification.group_id", :default => t("activerecord.labels.group_id", :default => "Group")) }:</b>
        = @clasification.group_id
      %p
        <b>#{ t("activerecord.attributes.admin_clasification.name", :default => t("activerecord.labels.name", :default => "Name")) }:</b>
        = @clasification.name
      %p
        <b>#{ t("activerecord.attributes.admin_clasification.position_key", :default => t("activerecord.labels.position_key", :default => "Position key")) }:</b>
        = @clasification.position_key
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => t("web-app-theme.edit", :default=> "Edit"))} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_clasification_path(@clasification), :class => "button" } 
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => t("web-app-theme.delete", :default=> "Delete"))} #{t("web-app-theme.delete", :default => "Delete")}", admin_clasification_path(@clasification), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'sidebar')