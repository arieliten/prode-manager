.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_competitions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_competition_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Competitions
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.admin_competition.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @competitions.each do |competition|
          %tr{:class => cycle("odd", "even")}
            %td= competition.id
            %td= link_to competition.name, admin_competition_path(competition)
            %td= competition.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), admin_competition_path(competition)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_competition_path(competition)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), admin_competition_path(competition), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions
        = #will_paginate @competitions
        
- content_for :sidebar, render(:partial => 'sidebar')
