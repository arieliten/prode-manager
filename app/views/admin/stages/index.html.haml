.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_competition_stages_path(@competition)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_competition_stage_path(@competition)
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Stages
    .inner
      %table.table
        %tr
          %th= t("Competition", :default=>"Competition")
          %th= t("Name", :default=>"Name")
          %th.last &nbsp;
        - @stages.each do |stage|
          %tr{:class => cycle("odd", "even")}
            %td= link_to stage.competition.name, admin_competition_path(stage.competition)
            %td= stage.name
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), admin_competition_stage_path(stage.competition, stage)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_competition_stage_path(stage.competition, stage)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), admin_competition_stage_path(stage.competition, stage), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions

