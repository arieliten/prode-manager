.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_competition_stages_path(@competition)
      %li= link_to t("web-app-theme.new", :default => "New"), new_admin_competition_stage_path(@competition)
      %li.active= link_to t("web-app-theme.show", :default => "Show"), admin_competition_stage_path(@competition)
  .content
    .inner
      %p
        <b>#{ t("activerecord.attributes.admin_stage.competition_id", :default => t("activerecord.labels.competition_id", :default => "Competition")) }:</b>
        = @stage.competition_id
      %p
        <b>#{ t("activerecord.attributes.admin_stage.name", :default => t("activerecord.labels.name", :default => "Name")) }:</b>
        = @stage.name
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => t("web-app-theme.edit", :default=> "Edit"))} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_competition_stage_path(@competition, @stage), :class => "button" } 
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => t("web-app-theme.delete", :default=> "Delete"))} #{t("web-app-theme.delete", :default => "Delete")}", admin_competition_stage_path(@competition, @stage), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

